extends layout

block content
 form(method='post' action='/doctors/edit/#{doctor.doc_id}' class='addForm')
  h3 Doctor Info
  div
   label Full Name: 
   input(type='text' name='full_name' value='#{doctor.full_name}')
  div
   label Category: 
   select(name='category')
    each category, i in categories
     option(value='#{category.name}') #{category.name}
  div
   label Accepting New Patients: 
   select(name='new_patients')
    option(value='true') Yes
    option(value='false') No
  div
   label Graduation Year: 
   input(type='text' name='graduation_year'  value='#{doctor.graduation_year}')
   h3 Practice Info
   div
    label Practice Name
    input(type='text' name='practice_name'  value='#{doctor.practice_name}')
   div
    label Street Address
    input(type='text' name='street_address'  value='#{doctor.street_address}')
   div
    label City
    input(type='text' name='city'  value='#{doctor.city}')
   div
    label State
    input(type='text' name='state'  value='#{doctor.state}')
   div
    label Zip
    input(type='text' name='zip'  value='#{doctor.zip}')
    br
    input(type='hidden' name='doc_id'  value='#{doctor.doc_id}')
   div
    input(type='submit' value='Update Doctor')